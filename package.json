  "bin": {
    "gitcg": "./bin/run"
  },
  "bugs": "https://github.com/weikangchia/gitcg/issues",
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^5.0.0",
    "dotenv": "^16.0.0",
    "graphql": "^16.0.0",
    "graphql-request": "^4.0.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.26.10",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.33",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "28.1.3",
    "prettier": "2.6.2",
    "ts-jest": "28.0.3",
    "ts-node": "10.7.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
